{
  "name": "pms-vscode",
  "displayName": "PTY MCP Server Integration for VSCode",
  "description": "A VSCode extension integrating with the Haskell-based PTY MCP Server, enabling AI-driven orchestration of terminal interactions via the Model Completion Protocol (MCP). It is designed to support Infrastructure as Code (IaC) workflows that automate configuration and management of both cloud resources and on-premises hardware and network devices.",
  "version": "0.0.4",
  "publisher": "phoityne",
  "author": {
		"name": "phoityne.hs"
	},
	"license": "Apache-2.0",
	"repository": {
		"url": "https://github.com/phoityne/pms-vscode"
	},
	"bugs": {
		"url": "https://github.com/phoityne/pms-vscode/issues"
	},
	"private": false,
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Debuggers",
    "AI"
  ],
  "icon": "images/HaskellLogo.png",
	"keywords": [
		"debug",
		"haskell",
		"ghc",
		"ghci",
		"cabal",
		"stack",
    "ai",
    "mcp",
    "model context protocol",
    "pty"
	],  
  "activationEvents": [
      "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [],
    "mcpServerDefinitionProviders": [
      {
        "id": "ptyMcpServerProvider",
        "label": "PTY MCP Server"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}
